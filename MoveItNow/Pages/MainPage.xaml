<Page x:Class="MoveItNow.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoveItNow"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <local:BrowseTB
            FilePath="{Binding SourcePath, Mode=TwoWay}"
            Margin="10,10,0,0" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left"
            Height="20"  
            Width="380" />
        <local:BrowseTB 
            FilePath="{Binding DestinationPath, Mode=TwoWay}"
            Margin="390,10,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left" 
            Height="20"  
            Width="380" />
        <ListBox
            ItemsSource="{Binding SourceFiles}"
            Margin="10,40,0,0" Height="500" VerticalAlignment="Top" HorizontalAlignment="Left" Width="380" />
        <ListBox
            ItemsSource="{Binding DestinationFiles}"
            Margin="390,40,0,0" HorizontalAlignment="Left" Width="380" Height="500" VerticalAlignment="Top" />
    </Grid>
</Page>